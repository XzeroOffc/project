<%- include('partials/header') %>

<section class="plans-page-terminal">
  <div class="container">
    <div class="page-header-terminal">
      <div class="page-badge">
        <span class="badge-dot"></span>
        Deploy Server
      </div>
      <h1 class="page-title-terminal">
        Pilih <span class="gradient-text">Paket Panel</span>
      </h1>
      <p class="page-subtitle-terminal">
        Infrastruktur premium dengan performa tinggi. Pilih paket yang sesuai kebutuhan Anda.
      </p>
    </div>

    <div class="plans-grid-terminal">
      <% plans.forEach((plan, index) => { %>
        <div class="plan-card-terminal" data-delay="<%= index * 100 %>">
          <% if (plan.id === '4gb') { %>
            <div class="plan-badge-popular">
              <i class="fas fa-fire"></i> Popular
            </div>
          <% } %>
          
          <% if (plan.id === 'unlimited') { %>
            <div class="plan-badge-ultimate">
              <i class="fas fa-crown"></i> Ultimate
            </div>
          <% } %>
          
          <div class="plan-header-terminal">
            <div class="plan-icon-terminal">
              <i class="fas fa-<%= plan.id === 'unlimited' ? 'infinity' : 'server' %>"></i>
            </div>
            <h3 class="plan-name-terminal"><%= plan.name %></h3>
            <div class="plan-price-terminal">
              <span class="price-currency">Rp</span>
              <span class="price-amount"><%= plan.price.toLocaleString('id-ID') %></span>
            </div>
          </div>

          <div class="plan-specs-terminal">
            <div class="spec-item-terminal">
              <div class="spec-icon">
                <i class="fas fa-memory"></i>
              </div>
              <div class="spec-content">
                <span class="spec-label">RAM</span>
                <span class="spec-value"><%= plan.specs.ram === 0 ? 'Unlimited' : plan.specs.ram + ' MB' %></span>
              </div>
            </div>
            
            <div class="spec-item-terminal">
              <div class="spec-icon">
                <i class="fas fa-hdd"></i>
              </div>
              <div class="spec-content">
                <span class="spec-label">Storage</span>
                <span class="spec-value"><%= plan.specs.disk === 0 ? 'Unlimited' : plan.specs.disk + ' MB' %></span>
              </div>
            </div>
            
            <div class="spec-item-terminal">
              <div class="spec-icon">
                <i class="fas fa-microchip"></i>
              </div>
              <div class="spec-content">
                <span class="spec-label">CPU</span>
                <span class="spec-value"><%= plan.specs.cpu === 0 ? 'Unlimited' : plan.specs.cpu + '%' %></span>
              </div>
            </div>
            
            <div class="spec-item-terminal">
              <div class="spec-icon">
                <i class="fas fa-database"></i>
              </div>
              <div class="spec-content">
                <span class="spec-label">Backup Slot</span>
                <span class="spec-value">5</span>
              </div>
            </div>
            
            <div class="spec-item-terminal">
              <div class="spec-icon">
                <i class="fas fa-shield-halved"></i>
              </div>
              <div class="spec-content">
                <span class="spec-label">DDoS</span>
                <span class="spec-value">Protected</span>
              </div>
            </div>
          </div>

          <div class="plan-features-terminal">
            <div class="feature-check">
              <i class="fas fa-check-circle"></i>
              <span>Instant Activation</span>
            </div>
            <div class="feature-check">
              <i class="fas fa-check-circle"></i>
              <span>24/7 Support</span>
            </div>
          </div>

          <a href="/checkout/<%= plan.id %>" class="btn btn-primary btn-block">
            <span>Deploy Now</span>
            <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      <% }) %>
    </div>

    <!-- Info Terminal Box -->
    <div class="info-terminal-box">
      <div class="info-terminal-header">
        <div class="terminal-buttons">
          <span class="terminal-btn close"></span>
          <span class="terminal-btn minimize"></span>
          <span class="terminal-btn maximize"></span>
        </div>
        <div class="terminal-title">info@zanspanel:~</div>
      </div>
      <div class="info-terminal-body">
        <div class="terminal-line">
          <span class="terminal-prompt">info@zanspanel:~$</span>
          <span class="terminal-command">cat important-notes.txt</span>
        </div>
        <div class="terminal-output">
          <div class="terminal-success">
            <i class="fas fa-check-circle"></i> Panel otomatis aktif setelah pembayaran terverifikasi
          </div>
          <div class="terminal-success">
            <i class="fas fa-check-circle"></i> Data akses dikirim ke email yang Anda daftarkan
          </div>
          <div class="terminal-success">
            <i class="fas fa-check-circle"></i> Pembayaran via QRIS (All E-wallet & Mobile Banking)
          </div>
          <div class="terminal-success">
            <i class="fas fa-check-circle"></i> Garansi uang kembali jika panel tidak aktif dalam 5 menit
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>